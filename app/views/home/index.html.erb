    </style>
</head>
<body>

<div class="navbar">
    <div class="flex items-center gap-2">
        <span class="text-2xl">üé®</span>
        <span class="font-bold tracking-tight uppercase">Color Matcher</span>
    </div>
    <a href="/login" class="login-btn text-white no-underline">LOGIN</a>
</div>

<div class="main-layout">
    <div id="colorDisplay"></div>

    <div class="sidebar">
        <label class="text-[10px] font-bold text-gray-400 uppercase">Base Color Picker</label>
        <input type="color" id="baseColor" value="#66d7d1" class="w-full h-16 rounded-xl cursor-pointer border-2 border-gray-100 p-1 mb-4">
        
        <div class="flex flex-col gap-2">
            <button onclick="toggle('analogous', this)" class="w-full py-3 bg-blue-500 text-white rounded-lg font-bold opacity-40">ANALOGOUS</button>
            <button onclick="toggle('triadic', this)" class="w-full py-3 bg-indigo-500 text-white rounded-lg font-bold opacity-40">TRIADIC</button>
            <button onclick="toggle('tints', this)" class="w-full py-3 bg-pink-500 text-white rounded-lg font-bold opacity-40">TINTS</button>
            <button onclick="toggle('shades', this)" class="w-full py-3 bg-rose-500 text-white rounded-lg font-bold opacity-40">SHADES</button>
        </div>
    </div>
</div>

<script>
    // Logic ‡∏Å‡∏≤‡∏£‡∏Ñ‡∏≥‡∏ô‡∏ß‡∏ì‡∏™‡∏µ‡πÄ‡∏û‡∏∑‡πà‡∏≠‡πÉ‡∏´‡πâ‡∏™‡∏µ‡∏ô‡∏¥‡πà‡∏á
    let active = { analogous: false, triadic: false, tints: false, shades: false };

    function render() {
        const display = document.getElementById("colorDisplay");
        const base = document.getElementById("baseColor").value;
        display.innerHTML = "";

        // ‡∏ß‡∏≤‡∏î Base ‡∏ä‡πà‡∏≠‡∏á‡πÅ‡∏£‡∏Å‡πÄ‡∏™‡∏°‡∏≠ (‡∏ä‡∏¥‡∏î‡∏°‡∏∏‡∏°‡∏ã‡πâ‡∏≤‡∏¢)
        addBox(base, 'base');

        // ‡πÅ‡∏™‡∏î‡∏á‡∏™‡∏µ‡∏≠‡∏∑‡πà‡∏ô‡πÜ ‡∏ï‡∏≤‡∏°‡∏Å‡∏≤‡∏£‡∏Å‡∏î‡∏õ‡∏∏‡πà‡∏° (‡∏à‡∏∞‡πÄ‡∏£‡∏µ‡∏¢‡∏á‡∏ï‡πà‡∏≠‡∏à‡∏≤‡∏Å Base ‡∏ó‡∏±‡∏ô‡∏ó‡∏µ)
        if(active.analogous) { addBox('#3b82f6', 'an'); addBox('#60a5fa', 'an'); }
        if(active.triadic) { addBox('#8b5cf6', 'tr'); addBox('#ec4899', 'tr'); }
        // ... (‡πÉ‡∏™‡πà logic ‡∏™‡∏µ‡∏≠‡∏∑‡πà‡∏ô‡πÜ ‡∏Ç‡∏≠‡∏á‡∏Ñ‡∏∏‡∏ì‡πÑ‡∏î‡πâ‡∏ó‡∏µ‡πà‡∏ô‡∏µ‡πà)
    }

    function addBox(color, type) {
        const div = document.createElement("div");
        div.className = "color-box";
        div.dataset.type = type;
        div.style.backgroundColor = color;
        div.innerHTML = `<div class="color-label">${color.toUpperCase()}</div>`;
        div.onclick = () => { navigator.clipboard.writeText(color); alert("Copied!"); };
        document.getElementById("colorDisplay").appendChild(div);
    }

    function toggle(type, btn) {
        active[type] = !active[type];
        btn.style.opacity = active[type] ? "1" : "0.4";
        render();
    }

    document.getElementById("baseColor").oninput = render;
    render(); // Initial Render
</script>

</body>
</html>