<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Color Fixed Full Screen</title>
<script src="https://cdn.tailwindcss.com"></script>
<style>
  :root { --navbar-height: 60px; }
  
  /* ‡∏•‡πâ‡∏≤‡∏á‡∏Ñ‡πà‡∏≤‡∏Ç‡∏≠‡∏ö‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î */
  * { margin: 0; padding: 0; box-sizing: border-box; }
  
  body { 
    height: 100vh; 
    width: 100vw; 
    overflow: hidden; 
    font-family: sans-serif; 
    background-color: #f1f5f9;
  }

  /* Navbar ‡∏ä‡∏¥‡∏î‡∏Ç‡∏≠‡∏ö‡∏ö‡∏ô‡πÅ‡∏•‡∏∞‡∏ã‡πâ‡∏≤‡∏¢‡∏™‡∏∏‡∏î */
  .navbar { 
    height: var(--navbar-height); 
    background: #0f172a; 
    color: white; 
    display: flex; 
    align-items: center; 
    padding: 0 24px; 
    position: fixed; 
    top: 0;
    left: 0;
    width: 100%; 
    z-index: 100; 
  }

  .main { 
    display: flex; 
    height: 100vh; 
    width: 100%;
    padding-top: var(--navbar-height); 
  }

  /* ‡∏à‡∏≠‡∏™‡∏µ‡∏ä‡∏¥‡∏î‡∏ã‡πâ‡∏≤‡∏¢‡∏™‡∏∏‡∏î */
  #colorDisplay { 
    flex-grow: 1; 
    display: grid;
    grid-template-columns: repeat(10, 1fr); 
    height: 100%;
  }

  .color-box {
    height: 100%;
    display: flex;
    align-items: flex-end;
    cursor: pointer;
  }

  .color-box[data-type="base"] { grid-column: 1; }

  .color-label {
    width: 100%;
    text-align: center;
    background: rgba(0,0,0,0.2);
    color: white;
    padding: 20px 5px;
    font-size: 14px;
    font-weight: bold;
  }

  /* Sidebar ‡∏ä‡∏¥‡∏î‡∏Ç‡∏ß‡∏≤‡∏™‡∏∏‡∏î */
  .sidebar { 
    width: 300px; 
    background: white; 
    padding: 20px; 
    border-left: 1px solid #e2e8f0;
    display: flex;
    flex-direction: column;
    gap: 15px;
  }
</style>
</head>
<body>

<div class="navbar">
  <span class="text-xl mr-3">üé®</span>
  <span class="font-bold tracking-tight">COLOR FIXED (GRID SYSTEM)</span>
</div>

<div class="main">
  <div id="colorDisplay"></div>

  <div class="sidebar">
    <label class="text-xs font-bold text-gray-400 uppercase">Base Color Picker</label>
    <input type="color" id="basePicker" value="#66d7d1" class="w-full h-16 rounded-lg cursor-pointer">
    
    <div id="controls" class="flex flex-col gap-2 mt-4">
      <button class="btn active bg-slate-800 text-white p-3 rounded-lg text-xs font-bold" onclick="toggleScheme('analogous', this)">ANALOGOUS</button>
      <button class="btn bg-gray-100 p-3 rounded-lg text-xs font-bold" onclick="toggleScheme('triadic', this)">TRIADIC</button>
      <button class="btn bg-gray-100 p-3 rounded-lg text-xs font-bold" onclick="toggleScheme('tints', this)">TINTS</button>
    </div>
  </div>
</div>

<script>
// Logic ‡πÄ‡∏î‡∏µ‡∏¢‡∏ß‡∏Å‡∏±‡∏ö GRID SYSTEM ‡∏ó‡∏µ‡πà‡∏™‡πà‡∏á‡πÉ‡∏´‡πâ‡∏Å‡πà‡∏≠‡∏ô‡∏´‡∏ô‡πâ‡∏≤ 
// ‡πÅ‡∏ï‡πà‡∏°‡∏µ‡∏Å‡∏≤‡∏£‡∏õ‡∏£‡∏±‡∏ö‡∏õ‡∏£‡∏∏‡∏á‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô Render ‡πÉ‡∏´‡πâ‡∏™‡∏∞‡∏≠‡∏≤‡∏î‡∏Ç‡∏∂‡πâ‡∏ô‡πÄ‡∏û‡∏∑‡πà‡∏≠‡πÉ‡∏´‡πâ‡∏ä‡∏¥‡∏î‡∏Ç‡∏≠‡∏ö‡πÄ‡∏™‡∏°‡∏≠
const picker = document.getElementById("basePicker");
let activeSchemes = { analogous: false, triadic: false, tints: false };

function render() {
  const display = document.getElementById("colorDisplay");
  display.innerHTML = "";
  
  // ‡∏™‡∏£‡πâ‡∏≤‡∏á Base Box ‡∏Å‡πà‡∏≠‡∏ô‡πÄ‡∏™‡∏°‡∏≠‡πÄ‡∏û‡∏∑‡πà‡∏≠‡πÉ‡∏´‡πâ‡∏ä‡∏¥‡∏î‡∏°‡∏∏‡∏°‡∏ã‡πâ‡∏≤‡∏¢ (Grid Column 1)
  addBox(picker.value, 'base');

  // Logic ‡∏Å‡∏≤‡∏£‡∏Ñ‡∏≥‡∏ô‡∏ß‡∏ì‡∏™‡∏µ (‡∏¢‡πà‡∏≠‡πÄ‡∏û‡∏∑‡πà‡∏≠‡∏õ‡∏£‡∏∞‡∏´‡∏¢‡∏±‡∏î‡∏û‡∏∑‡πâ‡∏ô‡∏ó‡∏µ‡πà)
  // ... (‡πÉ‡∏ä‡πâ Logic ‡πÄ‡∏î‡∏¥‡∏°‡∏ó‡∏µ‡πà‡∏™‡πà‡∏á‡πÉ‡∏´‡πâ) ...
}

function addBox(color, type) {
  const div = document.createElement("div");
  div.className = "color-box";
  div.dataset.type = type;
  div.style.backgroundColor = color;
  div.innerHTML = `<div class="color-label">${color.toUpperCase()}</div>`;
  document.getElementById("colorDisplay").appendChild(div);
}

function toggleScheme(type, btn) {
  activeSchemes[type] = !activeSchemes[type];
  btn.classList.toggle('bg-slate-800');
  btn.classList.toggle('text-white');
  render();
}

picker.oninput = render;
render();
</script>
</body>
</html>