<h1 class="text-3xl font-bold mb-5 text-center">Color Matching Tool</h1>

<div class="flex justify-center mb-5 gap-3">
  <button class="filter-btn px-4 py-2 bg-blue-500 text-white rounded" data-category="all">All</button>
  <button class="filter-btn px-4 py-2 bg-blue-300 text-white rounded" data-category="Base Blue">Base Blue</button>
  <button class="filter-btn px-4 py-2 bg-blue-200 text-white rounded" data-category="Light Blue">Light Blue</button>
</div>

<div class="color-grid">
  <% @colors.each do |color| %>
    <div class="color-box" data-category="<%= color.category %>" style="background-color: <%= color.hex_code %>;">
      <div class="color-label"><%= color.name %></div>
    </div>
  <% end %>
</div>

<script>
  const buttons = document.querySelectorAll('.filter-btn');
  const colorBoxes = document.querySelectorAll('.color-box');

  buttons.forEach(button => {
    button.addEventListener('click', () => {
      const category = button.getAttribute('data-category');
      colorBoxes.forEach(box => {
        if (category === 'all' || box.dataset.category === category) {
          box.style.display = 'block';
        } else {
          box.style.display = 'none';
        }
      });
    });
  });
</script>
