<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Fixed Grid Palette</title>
<script src="https://cdn.tailwindcss.com"></script>
<style>
  :root { --navbar-height: 60px; }
  body { margin: 0; height: 100vh; overflow: hidden; font-family: sans-serif; }

  .navbar { height: var(--navbar-height); background: #0f172a; color: white; display: flex; align-items: center; padding: 0 24px; position: fixed; width: 100%; z-index: 100; }

  .main { display: flex; height: 100vh; padding-top: var(--navbar-height); }

  /* ‡∏£‡∏∞‡∏ö‡∏ö Grid: ‡∏à‡∏≠‡∏á‡∏û‡∏∑‡πâ‡∏ô‡∏ó‡∏µ‡πà‡πÑ‡∏ß‡πâ 10 ‡∏ä‡πà‡∏≠‡∏á‡πÄ‡∏ó‡πà‡∏≤‡πÜ ‡∏Å‡∏±‡∏ô */
  #colorDisplay { 
    flex-grow: 1; 
    display: grid;
    grid-template-columns: repeat(10, 1fr); 
    background: #f1f5f9;
    gap: 0;
  }

  .color-box {
    height: 100%;
    display: flex;
    align-items: flex-end;
    transition: background-color 0.3s ease;
    cursor: pointer;
    border-right: 1px solid rgba(0,0,0,0.05);
  }

  /* ‡∏•‡πá‡∏≠‡∏Å Base Color ‡πÉ‡∏´‡πâ‡∏≠‡∏¢‡∏π‡πà‡∏ó‡∏µ‡πà‡∏Ñ‡∏≠‡∏•‡∏±‡∏°‡∏ô‡πå‡∏ó‡∏µ‡πà 1 ‡πÄ‡∏™‡∏°‡∏≠ ‡πÑ‡∏°‡πà‡∏ß‡πà‡∏≤‡∏≠‡∏∞‡πÑ‡∏£‡∏à‡∏∞‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡∏∂‡πâ‡∏ô */
  .color-box[data-type="base"] {
    grid-column: 1; 
    border-right: 4px solid rgba(0,0,0,0.1);
  }

  .color-label {
    width: 100%;
    text-align: center;
    background: rgba(0,0,0,0.2);
    backdrop-filter: blur(5px);
    color: white;
    padding: 20px 5px;
    font-size: 12px;
    font-weight: bold;
  }

  .sidebar { width: 280px; background: white; padding: 20px; border-left: 1px solid #ddd; display: flex; flex-direction: column; gap: 10px; }
  
  .type-btn { @apply w-full py-2 rounded-lg font-bold text-xs border-2 transition-all; }
  .active { @apply border-slate-800 bg-slate-800 text-white; }
  .inactive { @apply border-slate-200 text-slate-400 bg-transparent; }
</style>
</head>
<body>

<div class="navbar">üé® COLOR FIXED (GRID SYSTEM)</div>

<div class="main">
  <div id="colorDisplay"></div>

  <div class="sidebar">
    <label class="text-[10px] font-bold text-gray-400 uppercase">Select Base</label>
    <input type="color" id="basePicker" value="#66d7d1" class="w-full h-12 rounded cursor-pointer mb-4">

    <p class="text-[10px] font-bold text-gray-400 uppercase">Schemes</p>
    <button class="type-btn inactive" data-type="analogous">Analogous</button>
    <button class="type-btn inactive" data-type="triadic">Triadic</button>
    <button class="type-btn inactive" data-type="tints">Tints</button>
    <button class="type-btn inactive" data-type="shades">Shades</button>
  </div>
</div>

<script>
const picker = document.getElementById("basePicker");
const display = document.getElementById("colorDisplay");
let activeSchemes = { analogous: false, triadic: false, tints: false, shades: false };

// ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡πÅ‡∏õ‡∏•‡∏á‡∏™‡∏µ‡∏û‡∏∑‡πâ‡∏ô‡∏ê‡∏≤‡∏ô
const hexToHsl = (hex) => {
  let r=parseInt(hex.slice(1,3),16)/255, g=parseInt(hex.slice(3,5),16)/255, b=parseInt(hex.slice(5,7),16)/255;
  let max=Math.max(r,g,b), min=Math.min(r,g,b), h, s, l=(max+min)/2;
  if(max==min) h=s=0;
  else {
    let d=max-min; s=l>0.5?d/(2-max-min):d/(max+min);
    switch(max){ case r:h=(g-b)/d+(g<b?6:0);break; case g:h=(b-r)/d+2;break; case b:h=(r-g)/d+4;break; }
    h*=60;
  }
  return {h, s:s*100, l:l*100};
};

const hslToHex = (h,s,l) => {
  l/=100; const a=s*Math.min(l,1-l)/100;
  const f=n=>{ const k=(n+h/30)%12; return l-a*Math.max(Math.min(k-3,9-k,1),-1); };
  return `#${[0,8,4].map(i=>Math.round(f(i)*255).toString(16).padStart(2,'0')).join('')}`.toUpperCase();
};

function render() {
  const baseHex = picker.value.toUpperCase();
  const hsl = hexToHsl(baseHex);
  display.innerHTML = "";

  // 1. ‡∏ß‡∏≤‡∏î Base Color ‡∏•‡∏á‡∏ä‡πà‡∏≠‡∏á‡∏ó‡∏µ‡πà 1 ‡πÄ‡∏™‡∏°‡∏≠
  addBox(baseHex, 'base');

  // 2. ‡∏Ñ‡∏≥‡∏ô‡∏ß‡∏ì‡∏™‡∏µ‡∏≠‡∏∑‡πà‡∏ô‡πÜ
  const schemes = {
    analogous: [hslToHex(hsl.h+30, hsl.s, hsl.l), hslToHex(hsl.h-30, hsl.s, hsl.l)],
    triadic: [hslToHex(hsl.h+120, hsl.s, hsl.l), hslToHex(hsl.h+240, hsl.s, hsl.l)],
    tints: [hslToHex(hsl.h, hsl.s, 85), hslToHex(hsl.h, hsl.s, 70)],
    shades: [hslToHex(hsl.h, hsl.s, 30), hslToHex(hsl.h, hsl.s, 15)]
  };

  // 3. ‡∏ß‡∏≤‡∏î‡∏™‡∏µ‡∏ó‡∏µ‡πà‡πÄ‡∏´‡∏•‡∏∑‡∏≠‡∏•‡∏á‡∏ä‡πà‡∏≠‡∏á‡∏ñ‡∏±‡∏î‡πÜ ‡πÑ‡∏õ (2, 3, 4...)
  Object.keys(activeSchemes).forEach(type => {
    if(activeSchemes[type]) {
      schemes[type].forEach(color => addBox(color, type));
    }
  });
}

function addBox(color, type) {
  const div = document.createElement("div");
  div.className = "color-box";
  div.dataset.type = type;
  div.style.backgroundColor = color;
  div.innerHTML = `<div class="color-label">${color}</div>`;
  div.onclick = () => {
    navigator.clipboard.writeText(color);
    alert("Copied: " + color);
  };
  display.appendChild(div);
}

// Event Listeners
picker.oninput = render;
document.querySelectorAll(".type-btn").forEach(btn => {
  btn.onclick = () => {
    const type = btn.dataset.type;
    activeSchemes[type] = !activeSchemes[type];
    btn.classList.toggle("active");
    btn.classList.toggle("inactive");
    render();
  };
});

render();
</script>
</body>
</html>