  .sidebar-btn:hover { filter: brightness(1.1); transform: scale(1.02); }
  .btn-active { ring: 4px solid rgba(0,0,0,0.1); filter: saturate(1.5); }

  /* Color Box */
  .color-box {
    height: 100%; 
