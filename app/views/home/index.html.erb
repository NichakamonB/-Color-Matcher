    <button class="w-full py-3 rounded-lg font-semibold cursor-pointer transition text-white bg-blue-500 type-btn" data-type="triadic">Triadic</button>
    <button class="w-full py-3 rounded-lg font-semibold cursor-pointer transition text-white bg-blue-500 type-btn" data-type="split">Split</button>
    <button class="w-full py-3 rounded-lg font-semibold cursor-pointer transition text-white bg-blue-500 type-btn" data-type="tints">Tints</button>
