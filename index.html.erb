<div class="container">
<h1 class="text-2xl font-bold mb-5 text-center">Color Matching Tool</h1>

<div class="color-grid">
  <% @colors.each do |color| %>
    <div class="color-box" style="background-color: <%= color.hex_code %>;">
      <div class="color-label"><%= color.name %></div>
    </div>
  <% end %>
</div>

</div>
